@using EverythingNBA.Web.Models.Games
@model GameInputModel

<h3 class="mx-3 px-3  pt-3 pb-0 w-100 player-form-label">Edit Game</h3>

<div class="m-3 form-group player-form">
    <form class="m-3 form-group" enctype="multipart/form-data" asp-controller="Games" asp-action="EditGame" method="post">

        <input type="hidden" class="form-control" asp-for="Id">

        <div class="form-row">
            <div class="col-md-5">
                <label>Home team</label>
                <span asp-validation-for="TeamHostName" class="text-danger"></span> <br />
                <input placeholder="Home team..." asp-for="TeamHostName" type="text" class="form-control" /> <br />
            </div>
            <div class="col-md-1">
                <span asp-validation-for="TeamHostPoints" class="text-danger"></span> <br />
                <input placeholder="Pts" asp-for="TeamHostPoints" type="number" class="form-control" /> <br />
            </div>

            <div class="col-md-5">
                <label>Away team</label>
                <span asp-validation-for="Team2Name" class="text-danger"></span> <br />
                <input placeholder="Away team..." asp-for="Team2Name" type="text" class="form-control" /> <br />
            </div>
            <div class="col-md-1">
                <span asp-validation-for="Team2Points" class="text-danger"></span> <br />
                <input placeholder="Pts" asp-for="Team2Points" type="number" class="form-control" /> <br />
            </div>
        </div> <br />

        <label>Date</label>
        <span asp-validation-for="Date" class="text-danger"></span> <br />
        <input placeholder="Date..." asp-for="Date" value="@Model.Date" type="date" class="form-control" /><br />

        <label class="mr-3">Finished:</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="IsFinished" id="inlineRadio1" value="true" checked>
            <label class="form-check-label" for="inlineRadio1">Yes</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="IsFinished" id="inlineRadio2" value="false">
            <label class="form-check-label" for="inlineRadio2">No</label>
        </div>

        <button type="submit" class="btn btn-secondary">Edit</button>
    </form>
</div>


