@using EverythingNBA.Web.Models.Games
@model  GameDetailsViewModel

    <div class="container-fluid mt-0">
        <div class="row">
            <div class="col-md-1" style="border-bottom: 2px solid black"></div>
            <div class="container-fluid game-title text-center pt-2 mx-0 px-0 col-md-10">@Model.TeamHostName &#160; : &#160; @Model.Team2Name</div>
            <div class="pl-3 pt-1 col-md-1" style="border-bottom: 2px solid black">
                <a class="p-1 m-0 btn btn-secondary game-link text-center"
                   href="/Games/HeadToHead/@Model.TeamHostName&@Model.Team2Name"
                   role="button">HeadToHead</a>
            </div>
        </div>
        <div class="row game-details">
            <div class="col-md-2 text-center py-2" style="border-right: 1px solid black;">@Model.TeamHostSeasonStatistic</div>
            <div class="col-md-8 text-center py-2" style="font-size: 28px; border-left: 1px solid black;border-right: 1px solid black;">@Model.TeamHostPoints &#160; : &#160; @Model.Team2Points</div>
            <div class="col-md-2 text-center py-2" style="border-left: 1px solid black;">@Model.Team2SeasonStatistic</div>
        </div>
        <div class="row game-details" style="width: 30%">
            <div class="col-md-6 text-center py-1 px-2 text-left" style="border-right: 1px solid black">@Model.Date</div>
            <div class="col-md-6 text-center py-1 px-2 text-right" style="border-left: 1px solid black">@Model.Venue</div>
        </div>
    </div>
    <div class="container-fluid row m-3">
        @await Html.PartialAsync("_GameStatisticsPartial", Model);
    </div>