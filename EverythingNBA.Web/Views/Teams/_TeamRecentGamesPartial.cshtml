@using EverythingNBA.Services.Models.Game
@model TeamGameOverviewServiceModel

    <div class="col-md-4 container-fluid p-0 m-0 player-game-box">
        <div class="container-fluid row p-0 player-bio p-0 m-0">
            <div class="col-md-5 p-0 text-center">@Model.TeamHostName</div>
            <div class="col-md-2 p-0 text-center">-</div>
            <div class="col-md-5 p-0 text-center">@Model.Team2Name</div>
        </div>
        <div class="container-fluid row player-bio p-0 m-0">
            <div class="col-md-5 p-0 text-center">@Model.TeamHostPoints</div>
            <div class="col-md-2 p-0 text-center">
                <a class="w-100 h-100 p-0 m-0 btn btn-secondary game-link"
                   href="/Games/GameDetails/@Model.Id"
                   role="button">Det.</a>
            </div>
            <div class="col-md-5 p-0 text-center">@Model.Team2Points</div>
        </div>
        <div class="container-fluid row player-bio p-0 m-0">
            @if (Model.IsHomeGame == true)
            {
                <div class="col-md-6 pl-1 text-left">Home</div>
            }
            else
            {
                <div class="col-md-6 pl-1 text-left">Away</div>
            }
            <div class="col-md-6 pr-1 text-right">@Model.Date</div>
        </div>
    </div>