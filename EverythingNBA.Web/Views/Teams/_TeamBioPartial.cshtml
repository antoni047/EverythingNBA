@using EverythingNBA.Services.Models.Team
@model GetTeamDetailsServiceModel

<div><img class="team-bio w-100" src="@Model.FullImageURL" alt="Team Image" /></div>
<div class="text-center team-bio py-3 px-2">Home Court: @Model.Venue</div>
<div class="text-center team-bio py-3 px-2">Conference: @Model.Conference</div>
<div class="text-center p-0 team-bio py-3 px-2">
    <a class="team-link p-0 m-0" href="@Model.Twitter">Twitter</a>
</div>
<div class="text-center p-0 team-bio py-3 px-2">
    <a class=" team-link p-0 m-0" href="@Model.Instagram">Instagram</a>
</div>
<div class="w-100 text-center team-bio py-3 px-2">
    <a class="team-link w-100 p-0 m-0" href="" role="button">TitlesWon</a>
    @if (Model.TitlesWon != "")
    {
        <div class="text-center team-bio py-2 px-2">@Model.TitlesWon</div>
    }
</div>
