<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EverythingNBA</title>
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Bungee+Inline&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Quantico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-nba mx-0">
            <a class="navbar-brand" href="#">EverythingNBA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse flex-row-reverse">
                <ul class="navbar-nav mx-0 row">
                    <li class="nav-item active">
                        <a class="nav-link text-dark border-right text-justify" asp-area="" asp-controller="Games" asp-action="CurrentResults">Results</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-dark border-right  text-justify" asp-area="" asp-controller="Games" asp-action="Fixtures">Fixtures</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-dark border-right  text-justify" asp-area="" asp-controller="Seasons" asp-action="CurrentStandings">Standings</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-dark border-right text-justify" asp-area="" asp-controller="Players" asp-action="All">Players</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-dark border-right text-justify" asp-area="" asp-controller="Teams" asp-action="All">Teams</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-dark  text-justify" asp-area="" asp-controller="Seasons" asp-action="All">Seasons</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </header>
    <div class="red-line mx-0"></div>

    <div>
        <main role="main" class="row">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
