@using EverythingNBA.Services.Models.Player
@model PlayerRecentGamesListingServiceModel

<div class="col-md-3 container-fluid p-0 m-0 player-game-box">
    <div class="container-fluid row p-0 m-0">
        <div class="col-md-5 p-2 text-center">@Model.TeamHostName</div>
        <div class="col-md-5 p-2 text-center border-right">@Model.Team2Name</div>
        <div class="col-md-2 p-0 text-center">
            <a href="/Games/GameDetails/@Model.Id"><i class="fas fa-info-circle"></i></a>
        </div>
    </div>
    <div class="container-fluid row p-0 m-0">
        <div class="col-md-5 p-2 text-center border-bottom ">@Model.TeamHostPoints</div>
        <div class="col-md-5 p-2 text-center border-bottom border-right">@Model.Team2Points</div>
    </div>
    <div class="container-fluid row  p-0 m-0">
        <div class="col-md-4 px-0 py-2 text-center">@Model.Points PTS</div>
        <div class="col-md-4 px-0 py-2 text-center">@Model.Assists AST</div>
        <div class="col-md-4 px-0 py-2 text-center">@Model.Rebounds REB</div>
    </div>
</div>