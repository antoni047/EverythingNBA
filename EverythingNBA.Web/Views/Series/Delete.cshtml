@using EverythingNBA.Web.Models.Series

@model SeriesInputModel

<h3 class="mx-3 px-3  pt-3 pb-0 w-100 player-form-label">Delete Series</h3>


@if (User.Identity.IsAuthenticated)
{
    <div class="m-3 form-group player-form">
        <form class="m-3 form-group" enctype="multipart/form-data" asp-controller="Series" asp-action="Delete" method="post">

            <input type="hidden" class="form-control" asp-for="PlayoffId" value="@Model.PlayoffId">
            <input type="hidden" class="form-control" asp-for="Id" value="@Model.Id">

            <div class="form-row">
                <div class="col-md-5">
                    <span asp-validation-for="Team1Name" class="text-danger"></span> <br />
                    <input placeholder="Team 1..." asp-for="Team1Name" type="text" class="form-control" readonly /> <br />
                </div>
                <div class="col-md-1">
                    <span asp-validation-for="Team1GamesWon" class="text-danger"></span> <br />
                    <input placeholder="Games Won..." asp-for="Team1GamesWon" type="number" class="form-control" readonly /> <br />
                </div>

                <div class="col-md-5">
                    <span asp-validation-for="Team2Name" class="text-danger"></span> <br />
                    <input placeholder="Team 2..." asp-for="Team2Name" type="text" class="form-control" readonly /> <br />
                </div>
                <div class="col-md-1">
                    <span asp-validation-for="Team2GamesWon" class="text-danger"></span> <br />
                    <input placeholder="Games Won..." asp-for="Team2GamesWon" type="number" class="form-control" readonly /> <br />
                </div>
            </div> <br />

            <span asp-validation-for="Conference" class="text-danger"></span> <br />
            <input placeholder="Conference..." asp-for="Conference" type="text" class="form-control" readonly /> <br />

            <span asp-validation-for="Stage" class="text-danger"></span> <br />
            <input placeholder="Stage..." asp-for="Stage" type="text" class="form-control" readonly /> <br />

            <span asp-validation-for="StageNumber" class="text-danger"></span> <br />
            <input placeholder="Stage Number..." asp-for="StageNumber" type="number" value="@Model.StageNumber" class="form-control" /> <br />

            <button type="submit" class="btn btn-secondary">Add</button>
        </form>
    </div>

}
else
{
    <h4 class="mx-3 px-3  pt-3 pb-0 w-100 player-form-label">Log in to access this page</h4>
}
