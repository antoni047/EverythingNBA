@using EverythingNBA.Services.Models.AllStarTeam
@model ICollection<GetAllStarTeamServiceModel>

<h2 class="w-100 container-fluid mx-4 text-center border-bottom">@ViewBag.Type</h2>
<div class="row mt-3" style="margin: auto; text-align:center">
    @foreach (var team in Model)
    {
        <div class="mx-4 AS-teams-container center">
            <div class="AST-head px-4">@team.Year</div>

            @await Html.PartialAsync("_AllStarTeamPartial", team)
        </div>
    }
</div>

<div class="container-fluid flex-row-reverse mx-4 my-3">
    <i class="p-1 fas fa-trash-alt fa-2x fa-pull-right"></i>
    <i class="p-1 fas fa-pen-square fa-2x fa-pull-right"></i>
    <i class="p-1 fas fa-plus-square fa-2x fa-pull-right"></i>
</div>
