@using EverythingNBA.Services.Models.Award
@model ICollection<AllAwardsServiceModel>

@{
    ViewData["Title"] = "All Awards";
    var message = TempData["Message"] as string;
    var type = TempData["Type"] as string;
}

@if (message != null)
{
    if (type == "Success")
    {
        @await Html.PartialAsync("/Views/Shared/_SuccessBoxPartial.cshtml", message);
    }
    else
    {
        @await Html.PartialAsync("/Views/Shared/_ErrorBoxPartial.cshtml", message);
    }
}

<div class="container-fluid m-3">
    <table class="table border-dark">
        <thead>
            <tr class="text-center bg-primary text-primary" style="font-size: 22px">
                <th class="border-right">Season</th>
                <th class="border-right">MVP</th>
                <th class="border-right">Finals' MVP</th>
                <th class="border-right">DPOTY</th>
                <th class="border-right">Top Scorer</th>
                <th class="border-right">ROTY</th>
                <th class="border-right">Sixth MOTY</th>
                <th class="border-right">MIP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var season in Model)
            {
                <tr class="text-center" style="font-size: 18px">
                    <td class="bg-secondary text-primary font-weight-bold" style="font-size: 22px">@season.Year</td>

                    @if (@season.MVP != null)
                    {
                        <td>@season.MVP</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }

                    @if (@season.FinalsMVP != null)
                    {
                        <td>@season.FinalsMVP</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }

                    @if (@season.DPOTY != null)
                    {
                        <td>@season.DPOTY</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }

                    @if (@season.TopScorer != null)
                    {
                        <td>@season.TopScorer</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }

                    @if (@season.ROTY != null)
                    {
                        <td>@season.ROTY</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }

                    @if (@season.SixthMOTY != null)
                    {
                        <td>@season.SixthMOTY</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }

                    @if (@season.MIP != null)
                    {
                        <td>@season.MIP</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }
                </tr>
            }
        </tbody>

    </table>
</div>

<div class="container-fluid mx-3">
    <text class="awards-info"><b>MVP</b> - Most Valuable Player; <b>Finals' MVP</b> - Most Valuable Player of the NBA Finals; <b>DPOTY</b> - Defensive Player of the Year; <b>Top Scorer</b> - Most points scored during the regular season; <b>ROTY</b> - Rookie of the Year; <b>Sixth MOTY</b> - Sixth Man of the Year; <b>MIP</b> - Most Improved Player</text>
</div>
