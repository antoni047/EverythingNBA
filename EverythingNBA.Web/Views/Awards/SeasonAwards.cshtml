@using EverythingNBA.Services.Models.Award
@model ICollection<AwardDetailsServiceModel>

@{
    if (Model.Any())
    {
         ViewData["Title"] = $"{ViewBag.Year} Awards";
    }
}

<div class="mx-5 w-50" style="margin: auto;">
    <table class="m-5 table table-bordered table-hover awards-table">
        <thead class="awards-table-head bg-primary text-primary">
            <tr>
                <th>@ViewBag.Year Awards</th>
                <th>Players</th>
                <th>Team</th>
                @if (User.Identity.IsAuthenticated)
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody class="px-2">
            @foreach (var award in Model)
            {
                <tr>
                    @if (award.Type == "MVP")
                    {
                        <td class="bg-secondary text-primary font-weight-bold">Most Valuable Player</td>
                        <td>
                            <a class="award-link" asp-controller="Players" asp-action="PlayerDetails" asp-route-playerName="@award.Winner"> @award.Winner</a>
                        </td>
                        <td>
                            <a class="award-link" asp-controller="Teams" asp-action="TeamDetails" asp-route-teamName="@award.WinnerTeam"> @award.WinnerTeam</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <a href="/Awards/Edit/@award.Id"><i class="p-1 fas fa-pen-square  fa-pull-right"></i></a>
                                <a href="/Awards/Delete/@award.Id"><i class="p-1 fas fa-trash-alt  fa-pull-right"></i></a>
                            </td>
                        }

                    }
                    else if (award.Type == "FinalsMVP")
                    {
                        <td class="bg-secondary text-primary font-weight-bold">Finals' Most Valuable Player</td>
                        <td>
                            <a class="award-link" asp-controller="Players" asp-action="PlayerDetails" asp-route-playerName="@award.Winner"> @award.Winner</a>
                        </td>
                        <td>
                            <a class="award-link" asp-controller="Teams" asp-action="TeamDetails" asp-route-teamName="@award.WinnerTeam"> @award.WinnerTeam</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <a href="/Awards/Edit/@award.Id"><i class="p-1 fas fa-pen-square  fa-pull-right"></i></a>
                                <a href="/Awards/Delete/@award.Id"><i class="p-1 fas fa-trash-alt  fa-pull-right"></i></a>
                            </td>
                        }

                    }
                    else if (award.Type == "DPOTY")
                    {
                        <td class="bg-secondary text-primary font-weight-bold">Defensive Player of the Year</td>
                        <td>
                            <a class="award-link" asp-controller="Players" asp-action="PlayerDetails" asp-route-playerName="@award.Winner"> @award.Winner</a>
                        </td>
                        <td>
                            <a class="award-link" asp-controller="Teams" asp-action="TeamDetails" asp-route-teamName="@award.WinnerTeam"> @award.WinnerTeam</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <a href="/Awards/Edit/@award.Id"><i class="p-1 fas fa-pen-square  fa-pull-right"></i></a>
                                <a href="/Awards/Delete/@award.Id"><i class="p-1 fas fa-trash-alt  fa-pull-right"></i></a>
                            </td>
                        }

                    }
                    else if (award.Type == "ROTY")
                    {
                        <td class="bg-secondary text-primary font-weight-bold">Rookie of the Year</td>
                        <td>
                            <a class="award-link" asp-controller="Players" asp-action="PlayerDetails" asp-route-playerName="@award.Winner"> @award.Winner</a>
                        </td>
                        <td>
                            <a class="award-link" asp-controller="Teams" asp-action="TeamDetails" asp-route-teamName="@award.WinnerTeam"> @award.WinnerTeam</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <a href="/Awards/Edit/@award.Id"><i class="p-1 fas fa-pen-square  fa-pull-right"></i></a>
                                <a href="/Awards/Delete/@award.Id"><i class="p-1 fas fa-trash-alt  fa-pull-right"></i></a>
                            </td>
                        }
                    }
                    else if (award.Type == "TopScorer")
                    {
                        <td class="bg-secondary text-primary font-weight-bold">TopScorer</td>
                        <td>
                            <a class="award-link" asp-controller="Players" asp-action="PlayerDetails" asp-route-playerName="@award.Winner"> @award.Winner</a>
                        </td>
                        <td>
                            <a class="award-link" asp-controller="Teams" asp-action="TeamDetails" asp-route-teamName="@award.WinnerTeam"> @award.WinnerTeam</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <a href="/Awards/Edit/@award.Id"><i class="p-1 fas fa-pen-square  fa-pull-right"></i></a>
                                <a href="/Awards/Delete/@award.Id"><i class="p-1 fas fa-trash-alt  fa-pull-right"></i></a>
                            </td>
                        }
                    }
                    else if (award.Type == "MIP")
                    {
                        <td class="bg-secondary text-primary font-weight-bold">Most Improved Player</td>
                        <td>
                            <a class="award-link" asp-controller="Players" asp-action="PlayerDetails" asp-route-playerName="@award.Winner"> @award.Winner</a>
                        </td>
                        <td>
                            <a class="award-link" asp-controller="Teams" asp-action="TeamDetails" asp-route-teamName="@award.WinnerTeam"> @award.WinnerTeam</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <a href="/Awards/Edit/@award.Id"><i class="p-1 fas fa-pen-square  fa-pull-right"></i></a>
                                <a href="/Awards/Delete/@award.Id"><i class="p-1 fas fa-trash-alt  fa-pull-right"></i></a>
                            </td>
                        }
                    }
                    else if (award.Type == "SixthMOTY")
                    {
                        <td class="bg-secondary text-primary font-weight-bold">Sixth Man of the Year</td>
                        <td>
                            <a class="award-link" asp-controller="Players" asp-action="PlayerDetails" asp-route-playerName="@award.Winner"> @award.Winner</a>
                        </td>
                        <td>
                            <a class="award-link" asp-controller="Teams" asp-action="TeamDetails" asp-route-teamNam="@award.WinnerTeam"> @award.WinnerTeam</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <a href="/Awards/Edit/@award.Id"><i class="p-1 fas fa-pen-square  fa-pull-right"></i></a>
                                <a href="/Awards/Delete/@award.Id"><i class="p-1 fas fa-trash-alt  fa-pull-right"></i></a>
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
</div>