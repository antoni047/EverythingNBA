@using EverythingNBA.Web.Models.Awards
@model AwardDetailsInputModel

@{
    ViewData["Title"] = "Edit Award Details";
}

<h3 class="mx-3 px-3  pt-3 pb-0 w-100 player-form-label">Edit Award</h3>

<div class="m-3 form-group player-form">
    <form class="m-3 form-group" enctype="multipart/form-data" asp-controller="Awards" asp-action="Edit" method="post">

        <input type="hidden" class="form-control" asp-for="Id" value="@ViewBag.Id">

        <label>Winner</label>
        <span asp-validation-for="Winner" class="text-danger"></span> <br />
        <input placeholder="Winner..." asp-for="Winner" type="text" class="form-control" /> <br />

        <label>Winner Team</label>
        <span asp-validation-for="WinnerTeam" class="text-danger"></span> <br />
        <input placeholder="Winner Team..." asp-for="WinnerTeam" type="text" class="form-control" /> <br />

        <label>Year</label>
        <span asp-validation-for="Year" class="text-danger"></span> <br />
        <input placeholder="Year..." asp-for="Year" type="number" class="form-control" /><br />

        <label>Type</label>
        <select asp-for="Type" id="type" class="form-control">
            Type
            <option value="" selected disabled hidden>Type...</option>
            <option value="MVP">MVP</option>
            <option value="FinalsMVP">Finals' MVP</option>
            <option value="TopScorer">Top Scorer</option>
            <option value="DPOTY">DPOTY</option>
            <option value="ROTY">ROTY</option>
            <option value="SixthMOTY">Sixth MOTY</option>
            <option value="MIP">MIP</option>
        </select> <br />
        <span asp-validation-for="Type" class="text-danger"></span>

        <button type="submit" class="btn btn-secondary">Edit</button>
    </form>
</div>



